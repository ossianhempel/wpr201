@model IEnumerable<wpr201_assignment2_asp.Models.Order>

@{
    ViewData["Title"] = "View Orders";
}

<div class="text-center">
    <h2>Orders</h2>

    <table class="table">
        <thead>
            <tr>
                <th>Order ID</th>
                @*<th>Pizza ID</th>*@
                <th>Pizza Name</th> 
                <th>Order Date</th>
                <th>Customer Name</th>
                <th>Address</th>
                <th>Quantity</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
            <tr>
                <td>@order.Id</td>
                @*<td>@order.PizzaId</td>*@
                <td>@order.Pizza.Name</td>
                <td>@order.OrderDate</td>
                <td>@order.CustomerName</td>
                <td>@order.Address</td>
                <td>@order.Quantity</td>
                <td>
                    <form asp-action="DeleteOrder" asp-controller="Order" asp-route-id="@order.Id" method="post" style="display:inline;">
                        <input type="submit" value="Delete" />
                    </form>
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>
