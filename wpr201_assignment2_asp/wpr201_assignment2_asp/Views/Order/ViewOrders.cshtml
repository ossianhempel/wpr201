@model IEnumerable<wpr201_assignment2_asp.Models.Order>

@{
    ViewData["Title"] = "View Orders"; 
}

<div class="text-center">

    <h2>Beställningar</h2>

    <!-- Tabell för att visa beställningar -->
    <table class="table">
        <thead>
            <!-- Tabellhuvud -->
            <tr>
                <th>Order ID</th> 
                <th>Pizza Name</th> 
                <th>Datum</th> 
                <th>Name</th> 
                <th>Adress</th> 
                <th>Antal</th> /
            </tr>
        </thead>
        <tbody>

            <!-- Loopar igenom och visar beställningarna -->
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.Id</td> // Beställnings-ID
                    <td>@order.Pizza.Name</td> 
                    <td>@order.OrderDate</td> 
                    <td>@order.CustomerName</td> 
                    <td>@order.Address</td> 
                    <td>@order.Quantity</td> 

                    <!-- Formulär för att radera beställning -->
                    <td>
                        <form asp-action="DeleteOrder" asp-controller="Order" asp-route-id="@order.Id" method="post" style="display:inline;">
                            <input type="submit" value="Delete" /> 
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
