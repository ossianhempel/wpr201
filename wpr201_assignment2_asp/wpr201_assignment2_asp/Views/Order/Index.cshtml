@model IEnumerable<wpr201_assignment2_asp.Models.Order>

@{
    ViewData["Title"] = "View Orders"; 
}

<div class="text-center">

    <h2>Placerade beställningar</h2>

    <!-- Tabell för att visa beställningar -->
    <table class="table">
        <thead>
            <!-- Tabellhuvud -->
            <tr>
                <th>Order Id</th>
                <th>Pizza Id</th>
                <th>Orderdatum</th>
                <th>Kundens namn</th>
                <th>Adress</th>
                <th>Antal</th>
                <th>Pizzans namn</th>
            </tr>
        </thead>
        <tbody>
            <!-- Loopar igenom och visar beställningarna -->
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.Id</td> 
                    <td>@order.PizzaId</td> 
                    <td>@order.OrderDate</td> 
                    <td>@order.CustomerName</td> 
                    <td>@order.Address</td> 
                    <td>@order.Quantity</td> 
                    <td>@order.Pizza?.Name</td> <!-- Pizzans namn (använder "?" för att undvika null) -->
                </tr>
            }
        </tbody>
    </table>
</div>
