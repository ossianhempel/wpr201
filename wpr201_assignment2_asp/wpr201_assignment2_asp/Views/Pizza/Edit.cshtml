@model wpr201_assignment2_asp.Models.Pizza

@{
    ViewData["Title"] = "Edit Pizza";
}

<h1>Edit Pizza</h1>

<!-- Use the model's ID for the action and set the method to "post" -->
<form asp-action="Edit" asp-route-id="@Model.Id" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Name">Pizzans namn</label>
        <input asp-for="Name" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Description">Beskrivning</label>
        <input asp-for="Description" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Price">Pris (sek)</label>
        <input asp-for="Price" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>
