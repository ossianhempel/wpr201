@model IEnumerable<wpr201_assignment2_asp.Models.Pizza>

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">

    <!-- Displaying Pizzas -->
    <h2>Pizzor</h2>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Namn</th>
                <th>Beskrivning</th>
                <th>Pris (sek)</th>
                <th>Ändringar</th>
            </tr>
        </thead>
        <!-- Existing table code -->
        <tbody>
            @foreach (var pizza in Model)
            {
                <tr>
                    <td>@pizza.Id</td>
                    <td>@pizza.Name</td>
                    <td>@pizza.Description</td>
                    <td>@pizza.Price</td>
                    <td>
                        <!-- Style the anchor tag like a button and wrap it in a form for Edit -->
                        <form asp-action="Edit" asp-controller="Pizza" asp-route-id="@pizza.Id" method="get" style="display:inline;">
                            <input type="submit" value="Redigera" />
                        </form>

                        |

                        <!-- Style the anchor tag like a button and wrap it in a form for Delete -->
                        <form asp-action="Delete" asp-controller="Pizza" asp-route-id="@pizza.Id" method="post" style="display:inline;">
                            <input type="submit" value="Ta bort" />
                        </form>
                    </td>
                </tr>
            }
        </tbody>

    </table>
</div>
